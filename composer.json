{
    "name": "brandembassy/slim-nette-extension",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BrandEmbassy\\Slim\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrandEmbassyTest\\Slim\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "nette/neon": "^3.0",
        "slim/slim": "^3.12",
        "nette/utils": "^3.0",
        "nette/di": "^3.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "roave/security-advisories": "dev-master",
        "mockery/mockery": "^1.2",
        "brandembassy/coding-standard": "^5.3"
    },
    "scripts": {
        "lint": " find src tests -name \"*.php\" -print0 | xargs -0 -n1 -P8 php -l",
        "phpcs": "./vendor/bin/phpcs  --ignore=\"tests/temp/*\" --standard=ruleset.xml src tests",
        "phpcbf": "./vendor/bin/phpcbf --standard=ruleset.xml src tests",
        "phpstan": "./vendor/bin/phpstan analyse src tests",
        "tests": "./vendor/bin/phpunit tests",
        "tests-debug": "XDEBUG_CONFIG='idekey=PHPSTORM remote_autostart=1' PHP_IDE_CONFIG='serverName=default' ./vendor/bin/phpunit tests --stop-on-failure"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "process-timeout": 600
    }
}
